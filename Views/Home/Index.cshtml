@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Find a medication, the closest to your city</p>

    @model Saidality.Models.Locaton
    @{
        ViewData["Title"] = "Index";
    }

    <hr />
    <div class="card">
        <div class="card-body">
            <form asp-action="search">
                <div class="form-group">

                    <div class="form-group  col col-4">
                        <label for="Medicine">Medicine Name</label>
                        <input type="text" class="form-control" id="Medicine" placeholder="Medicine Name">
                    </div>
                    <div class="form-group col col-4">
                        <label for="state">Select State</label>
                        <select class="form-control" id="state" asp-for="LocatonID" asp-items="@(new SelectList(ViewBag.message,"LocatonID","State"))">
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Search" class="btn btn-primary" />
                    </div>

                </div>
                </form>
           
        </div>
</div>
</div>